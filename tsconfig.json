{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext", // More explicit than "Node"
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src", // Explicit source root
    "sourceMap": true, // Helpful for debugging
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Source maps for declarations
    "inlineSources": true, // Embed sources in sourcemaps
    "types": ["node"] // Explicit node types
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}